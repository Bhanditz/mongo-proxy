<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>

    <RollingFile name="RollingFile" fileName="log/bifrost.log" filePattern="log/bifrost.%i">
      <PatternLayout pattern="[%d{yyyy:MM:dd HH:mm:ss:SSS}] [%p] - %l - %m%n"/>
      <DefaultRolloverStrategy max="16"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
    </RollingFile>

    <RollingFile name="RollingJsonFile" fileName="log/json/bifrost-json.log" filePattern="log/json/bifrost-json.%i">
      <MaxLeapJsonLayout/>
      <DefaultRolloverStrategy max="2"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
    </RollingFile>

  </Appenders>


  <Loggers>
    <logger name="org.mongodb.driver" level="ERROR"></logger>
    <Root level="INFO">
      <AppenderRef ref="RollingFile"/>
      <AppenderRef ref="RollingJsonFile"/>
    </Root>
  </Loggers>
</Configuration>